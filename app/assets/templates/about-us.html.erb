    <div id="member-form" ng-show="signedIn()">
        <h3>Add a Member</h3>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-sm-4">
                    <input type="text" class="form-control" placeholder="Name" ng-model="newMember.name">
                </div>
                <div class="col-sm-4">
                    <input type="text" class="form-control" placeholder="position" ng-model="newMember.position">
                </div>
                <div class="col-sm-4">
                    <input type="number" class="form-control" placeholder="promotion" ng-model="newMember.promotion">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <textarea rows="8" class="form-control" placeholder="Abstract" ng-model="newMember.abstract"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="file" rows="8" class="form-control" ngf-select="upload($files, $file, $event)" ng-model="newMember.avatar">
                    <img ngf-src="newMember.avatar" ngf-background="newMember.avatar" ngf-resize="{width: 20, height: 20, quality: 0.9}">
                </div>
            </div>
            <button type="submit" class="btn btn-danger btn-lg" ng-click="addMember(newMember)">Create Member</button>
