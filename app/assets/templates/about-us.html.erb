                    <textarea rows="8" class="form-control" placeholder="Abstract" ng-model="newMember.abstract"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="file" rows="8" class="form-control" ngf-select="upload($files, $file, $event)" ng-model="newMember.avatar">
                    <img ngf-src="newMember.avatar" ngf-background="newMember.avatar" ngf-resize="{width: 20, height: 20, quality: 0.9}">
