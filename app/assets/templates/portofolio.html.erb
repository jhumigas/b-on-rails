 <section class="container">
    <div class="col-sm-12">
        <h3>Add a Picture</h3>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-sm-8">
                    <input type="text" class="form-control" ng-model="title">
                </div>
                <div class="col-sm-4">
                        <select name="typeService" ng-model="typeService" class="form-control">
                             <option value="missions">missions</option>
                             <option value="projets">projets</option>
                             <option value="campus">campus</option>
                        </select><br>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="file" rows="8" class="form-control" ngf-select="upload($files, $file, $event)" ng-model="filePic">
                    <img ngf-src="filePic" ngf-background="filePic" ngf-resize="{width: 20, height: 20, quality: 0.9}">
                </div>
            </div>
            <button type="submit" class="btn btn-danger btn-lg" ng-click="uploadPicture(title,filePic,typeService)">Submit Picture</button>      
        </form>
    </div><!--/#post-form-->
 </section>
