<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>Portfolio</h1>
                <p>Quelques images de nos activit√©s.</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li><a ui-sref="home">Home</a></li>
                    <li class="active">Portfolio</li>
                </ul>
            </div>
        </div>
    </div>
</section><!--/#title--> 

<section id="portfolio" class="container">
    <ul class="portfolio-filter">
        <li><a class="btn btn-default" ng-click="search.type_service=null">Tout</a></li>
        <li><a class="btn btn-default" ng-click="search.type_service='missions'">Missions</a></li>
        <li><a class="btn btn-default" ng-click="search.type_service='projets'">Projets</a></li>
        <li><a class="btn btn-default" ng-click="search.type_service='campus'">Campus</a></li>
    </ul><!--/#portfolio-filter-->
    <ul class="portfolio-items col-3" ng-repeat = "portofolio in portofolios | filter:search:strict">
        <li class="portfolio-item apps" ng-class="portofolio.type_service">
            <div class="item-inner">
                <img ng-src="{{portofolio.picture.url}}" alt="">
                <h5>{{portofolio.title}} <a class="btn btn-danger btn-xs pull-right" ng-click="delete(portofolio)"><i  class="icon-remove"></i></a></h5>       
            </div>          
        </li><!--/.portfolio-item-->
    </ul>
 </section><!--/#portfolio-->
